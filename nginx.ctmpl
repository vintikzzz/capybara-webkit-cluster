worker_processes auto;

events {
    worker_connections  1024;
}

stream {
    upstream webkit {
        {{range service "capybara-webkit-server"}}server {{.ServiceAddress}}:{{.ServicePort}};
        {{end}}
    }
    server {
        listen {{env "WEBKIT_PORT"}};
        proxy_connect_timeout 1s;
        proxy_timeout 5s;
        proxy_pass webkit;
    }
}
